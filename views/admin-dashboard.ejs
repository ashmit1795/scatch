<%- include('./partials/header') %>

<div class="min-h-screen pt-28 pb-10 bg-gray-50 px-8">
    <!-- Welcome Section -->
    <div class="bg-gradient-to-r from-blue-500 to-indigo-600 shadow rounded-lg p-6 flex items-center gap-4 mb-8 text-white">
        <img src="<%= user.avatar %>" alt="Admin Avatar" class="w-16 h-16 rounded-full border-2 border-white shadow-md">
        <div class="flex flex-col gap-1">
            <h2 class="text-2xl font-bold">Welcome, <%= user.fullName %></h2>
            <p class="text-sm">Here's your dashboard overview</p>
        </div>
        <!-- Role Badge -->
        <span class="ml-auto px-4 py-1 bg-white text-blue-600 font-semibold text-sm rounded-full shadow">
            <%= user.role === 'owner' ? 'Owner' : 'Manager' %>
        </span>
    </div>

    <!-- Dashboard Content -->
    <div class="flex flex-col lg:flex-row gap-6">
        <!-- Sidebar -->
        <div class="w-full lg:w-1/4 bg-white shadow rounded-lg p-6">
            <nav class="flex flex-col space-y-6">
                <a href="/app/admin/products" class="flex items-center gap-3 text-gray-700 font-medium hover:bg-gray-100 p-3 rounded-md">
                    <i class="ri-file-list-line text-xl text-blue-600"></i> 
                    All Products
                </a>
                <a href="/app/product/create" class="flex items-center gap-3 text-gray-700 font-medium hover:bg-gray-100 p-3 rounded-md">
                    <i class="ri-add-circle-line text-xl text-green-600"></i>
                    Create New Product
                </a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="w-full lg:w-3/4">
            <div class="bg-white shadow rounded-lg p-6">
                <!-- Header -->
                <div class="flex justify-between items-center mb-6">
                    <h2 class="text-xl font-bold text-gray-800">Product Management</h2>
                    <% if (products.length > 0) { %>
                        <a href="/app/admin/delete-all-products" class="text-red-600 font-medium hover:underline">Delete All Products</a>
                    <% } %>
                </div>

                <!-- Products Grid -->
                <% if (products.length > 0) { %>
                    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
                        <% products.forEach(product => { %>
                            <div class="bg-white shadow rounded-lg overflow-hidden">
                                <div class="h-40 flex items-center justify-center bg-gray-100">
                                    <img src="<%= product.image %>" alt="<%= product.name %>" class="h-24 object-contain">
                                </div>
                                <div class="p-4 flex flex-col gap-2">
                                    <h3 class="text-lg font-semibold text-gray-800"><%= product.name %></h3>
                                    <p class="text-gray-600">â‚¹ <%= product.price %></p>
                                    <div class="mt-3 flex justify-between items-center">
                                        <a href="/app/product/edit/<%= product._id %>" class="text-blue-600 hover:text-blue-800">
                                            <i class="ri-edit-line text-xl"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <div class="flex flex-col items-center justify-center p-8">
                        <i class="ri-shopping-cart-line text-4xl text-gray-400 mb-6"></i>                         
                        <p class="text-center text-gray-600">No products available. Please add new products to view them here.</p>
                        <a href="/app/product/create" class="mt-4 px-4 py-2 bg-blue-600 text-white rounded-md shadow hover:bg-blue-700">
                            Add New Product
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
