<%- include('./partials/header') %>

<div class="min-h-screen pt-28 bg-gray-100 px-8">
    <!-- Welcome Section -->
    <div class="bg-white shadow rounded-lg p-6 flex items-center gap-4 mb-8">
        <img src="<%= user.avatar %>" alt="Admin Avatar" class="w-16 h-16 rounded-full border shadow-md">
        <div>
            <h2 class="text-2xl font-bold text-gray-800">Welcome, <%= user.fullName %></h2>
            <p class="text-gray-500">Dashboard Overview</p>
        </div>
    </div>

    <!-- Dashboard Content -->
    <div class="flex flex-col lg:flex-row gap-6">
        <!-- Sidebar -->
        <div class="w-full lg:w-1/4 bg-white shadow rounded-lg p-6">
            <nav class="flex flex-col space-y-4">
                <a href="/app/admin/products" class="text-gray-600 font-medium hover:text-gray-800">All Products</a>
                <a href="/app/product/create" class="text-gray-600 font-medium hover:text-gray-800">Create New Product</a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="w-full lg:w-3/4">
            <div class="bg-white shadow rounded-lg p-6">
                <div class="flex justify-between items-center mb-4">
                    <h2 class="text-xl font-bold text-gray-800">Product Management</h2>
                    <% if (products.length > 0) { %>
                        <a href="/app/admin/delete-all-products" class="text-red-600 font-medium hover:underline">Delete All Products</a>
                    <% } %>
                </div>

                <% if (products.length > 0) { %>
                    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
                        <% products.forEach(product => { %>
                            <div class="bg-white shadow rounded-lg">
                                <div class="h-40 flex items-center justify-center" style="background-color: '<%= product.bgColor %>';">
                                    <img src="<%= product.image %>" alt="<%= product.name %>" class="h-24 object-contain">
                                </div>
                                <div class="p-4 flex justify-between items-center">
                                    <div>
                                        <h3 class="text-lg font-semibold text-gray-800"><%= product.name %></h3>
                                        <p class="text-gray-600">â‚¹ <%= product.price %></p>
                                    </div>
                                    <% if (product.createdBy.toString() === user._id.toString()) { %>
                                        <a href="/app/product/edit/<%= product._id %>" class="text-blue-600 hover:text-blue-800">
                                            <i class="ri-edit-line text-xl"></i>
                                        </a>
                                    <% } %>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <p class="text-center text-gray-600">No products available. Please add new products to view them here.</p>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
