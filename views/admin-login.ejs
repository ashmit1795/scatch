<%- include('./partials/header') %>

<% if (success_msg) { %>
    <div id="flash-success" class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-green-500">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= success_msg %>
        </span>
    </div>
<% } %>

<% if(error_msg){ %>
    <div id="flash-error" class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= error_msg %>
        </span>
    </div>
<% } %>

<div class="w-full h-screen flex px-20">
    <div class="w-1/2 flex items-center justify-center h-screen">
        <div class="w-full px-32">
            <h4 class="text-2xl capitalize mb-5">Admin Access</h4>
            <form action="/app/admin/" method="post">
                <input class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="email" placeholder="Username or Email" name="usernameOrEmail">
                <div class="relative">
                    <input id="password" class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                        type="password" placeholder="Password" name="password" required>
                    <button type="button" id="togglePassword" class="absolute right-3 top-2/4 transform -translate-y-1/2 text-gray-500 hover:text-gray-700">
                        <i class="ri-eye-line"></i> <!-- Icon for the eye -->
                    </button>
                </div>
                <input class="px-5 rounded-full py-3 mt-2 bg-blue-500 text-white" type="submit" value="Login">
            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>