<%- include('./partials/header') %>

<div class="w-full h-screen flex items-center justify-center bg-gradient-to-br from-gray-100 via-blue-50 to-purple-100 px-6">
    <div class="w-full max-w-4xl bg-white shadow-xl rounded-lg overflow-hidden flex">
        <!-- Left Section -->
        <div class="hidden md:flex w-1/2 bg-gradient-to-tr from-blue-600 to-purple-500 text-white items-center justify-center p-10">
            <div class="text-center space-y-6">
                <i class="ri-shield-user-line text-7xl"></i>
                <h2 class="text-3xl font-semibold">Welcome Admin!</h2>
                <p class="text-lg">Access the dashboard to manage and oversee operations efficiently.</p>
            </div>
        </div>

        <!-- Right Section -->
        <div class="w-full md:w-1/2 p-10">
            <h4 class="text-2xl font-bold text-gray-800 text-center mb-8 flex items-center justify-center gap-2">
                <i class="ri-lock-line"></i> Admin Login
            </h4>
            <form action="/app/admin/" method="post" class="space-y-6">
                <!-- Username or Email -->
                <div>
                    <label for="usernameOrEmail" class="text-gray-600 font-medium block mb-2">Email</label>
                    <input 
                        id="usernameOrEmail" 
                        type="text" 
                        name="usernameOrEmail" 
                        placeholder="Enter your username or email" 
                        class="block w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 bg-gray-50"
                        required
                    >
                </div>

                <!-- Password -->
                <div class="relative">
                    <label for="password" class="text-gray-600 font-medium block mb-2">Password</label>
                    <input 
                        id="password" 
                        type="password" 
                        name="password" 
                        placeholder="Enter your password" 
                        class="block w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 bg-gray-50"
                        required
                    >
                    <!-- Toggle Password Visibility -->
                    <button 
                        type="button" 
                        id="togglePassword" 
                        class="absolute right-4 top-14 transform -translate-y-1/2 text-gray-500 hover:text-gray-700"
                    >
                        <i class="ri-eye-line"></i>
                    </button>
                </div>

                <!-- Login Button -->
                <div class="flex justify-center">
                    <button 
                        type="submit" 
                        class="w-full py-3 bg-gradient-to-r from-blue-500 to-indigo-600 text-white font-medium rounded-md hover:shadow-lg hover:from-blue-600 hover:to-indigo-700 transition"
                    >
                        Login <i class="ri-arrow-right-line"></i>
                    </button>
                </div>
            </form>

            <!-- Forgot Password & Register -->
            <div class="text-center mt-4 space-y-2">
                <a href="#" class="text-blue-600 hover:text-blue-800 text-sm">Forgot Password?</a>
                <p class="text-sm text-gray-500">
                    Donâ€™t have an account? 
                    <a href="/app/admin/create" class="text-blue-600 hover:text-blue-800 font-medium">
                        Register as Admin
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>