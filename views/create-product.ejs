<%- include('./partials/header') %>

<div class="flex flex-col items-center justify-center min-h-screen bg-gradient-to-br from-blue-50 to-gray-100 px-6 py-28">
    <div class="bg-white rounded-lg shadow-lg w-full max-w-3xl p-10">
        <h2 class="text-3xl font-bold text-gray-800 mb-6 text-center">Create New Product</h2>
        <p class="text-gray-500 text-center mb-8">Fill in the details below to add a new product to your store.</p>
        <form action="/app/product/create" method="post" enctype="multipart/form-data" class="space-y-6">
            
            <!-- Product Name -->
            <div>
                <label class="text-gray-600 font-medium block mb-2">Product Name</label>
                <input type="text" name="name" placeholder="Enter product name" required 
                    class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 transition">
            </div>
    
            <!-- Description -->
            <div>
                <label class="text-gray-600 font-medium block mb-2">Description</label>
                <textarea name="description" placeholder="Enter product description" required 
                    class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 transition">
                </textarea>
            </div>
    
            <!-- Price -->
            <div class="flex flex-col md:flex-row gap-4">
                <div class="w-full">
                    <label class="text-gray-600 font-medium block mb-2">Price (â‚¹)</label>
                    <input type="number" name="price" placeholder="Enter price" required 
                        class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 transition">
                </div>
    
                <!-- Stock -->
                <div class="w-full">
                    <label class="text-gray-600 font-medium block mb-2">Stock</label>
                    <input type="number" name="stock" placeholder="Enter stock quantity" required 
                        class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 transition">
                </div>
            </div>
    
            <!-- Category -->
            <div>
                <label class="text-gray-600 font-medium block mb-2">Category</label>
                <input type="text" name="category" placeholder="Enter category" 
                class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 transition">
            </div>
    
            <!-- Image Upload -->
            <div>
                <label class="text-gray-600 font-medium block mb-2">Image</label>
                <input type="file" name="image" accept="image/*" required 
                    class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 transition">
            </div>
    
            <!-- Discount & Background Color -->
            <div class="flex flex-col md:flex-row gap-4">
                <div class="w-full">
                    <label class="text-gray-600 font-medium block mb-2">Discount (%)</label>
                    <input type="number" name="discount" value="0" 
                        class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 transition">
                </div>
                <div class="w-full">
                    <label class="text-gray-600 font-medium block mb-2">Background Color</label>
                    <input type="color" name="bgColor" value="#333333" 
                        class="w-full h-10 rounded-md border border-gray-300">
                </div>
            </div>
    
            <!-- Submit Button -->
            <div class="flex justify-center mt-8">
                <button type="submit" class="w-full md:w-1/3 bg-blue-600 text-white py-3 rounded-md font-semibold hover:bg-blue-700 transition ease-in-out duration-150 shadow-md">
                    Create Product
                </button>
            </div>
        </form>
    </div>
</div>

<%- include('./partials/footer') %>
