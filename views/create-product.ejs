<%- include('./partials/header') %>

<div class="flex flex-col items-center justify-center min-h-screen bg-gradient-to-br from-blue-50 via-white to-gray-100 px-6 py-28">
    <div class="bg-white rounded-lg shadow-xl w-full max-w-3xl p-8 md:p-10">
        <!-- Page Header -->
        <div class="text-center">
            <h2 class="text-4xl font-bold text-blue-600 flex items-center justify-center gap-2 mb-2">
                <i class="ri-add-line"></i> Create New Product
            </h2>
            <p class="text-gray-600 text-lg">Fill in the details below to add a new product to your store.</p>
        </div>
        
        <!-- Product Form -->
        <form action="/app/product/create" method="post" enctype="multipart/form-data" class="space-y-6 mt-8">
            
            <!-- Product Name -->
            <div>
                <label class="block text-gray-700 font-medium mb-2">Product Name</label>
                <input type="text" name="name" placeholder="Enter product name" required 
                    class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 transition">
            </div>
    
            <!-- Description -->
            <div>
                <label class="block text-gray-700 font-medium mb-2">Description</label>
                <textarea name="description" placeholder="Enter product description" required 
                    class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 transition"></textarea>
            </div>
    
            <!-- Price & Stock -->
            <div class="flex flex-col md:flex-row gap-4">
                <div class="w-full">
                    <label class="block text-gray-700 font-medium mb-2">Price (â‚¹)</label>
                    <input type="number" name="price" placeholder="Enter price" required 
                        class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 transition">
                </div>
                <div class="w-full">
                    <label class="block text-gray-700 font-medium mb-2">Stock</label>
                    <input type="number" name="stock" placeholder="Enter stock quantity" required 
                        class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 transition">
                </div>
            </div>
    
            <!-- Existing Categories -->
            <div>
                <label class="block text-gray-700 font-medium mb-2">Select Existing Categories</label>
                <select id="select-categories" name="selectedCategories" multiple 
                    class="w-full px-4 py-3 border border-gray-300 rounded-md bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 transition">
                    <% categories.forEach((category) => { %>
                        <option value="<%= category %>" ><%= category %></option>
                    <% }) %>
                    <!-- <option value="Backpack">Backpack</option>
                    <option value="Home">Home</option>
                    <option value="Travel">Travel</option>
                    <option value="Tote Bag">Tote Bag</option> -->
                </select>
                <p class="text-sm text-gray-600 mt-2">Hold down Ctrl (Windows) or Command (Mac) to select multiple categories.</p>
            </div>
    
            <!-- Add New Categories -->
            <div>
                <label class="block text-gray-700 font-medium mb-2">Add New Categories</label>
                <div id="new-category-fields" class="space-y-2">
                    <input type="text" name="newCategories[]" placeholder="Enter new category" 
                        class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 transition">
                </div>
                <button type="button" id="add-category-field" 
                    class="mt-2 bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 transition">
                    Add Another Category
                </button>
            </div>
    
            <!-- Image Upload -->
            <div>
                <label class="block text-gray-700 font-medium mb-2">Product Image</label>
                <input type="file" name="image" accept="image/*" required 
                    class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 transition">
            </div>
    
            <!-- Discount & Background Color -->
            <div class="flex flex-col md:flex-row gap-4">
                <div class="w-full">
                    <label class="block text-gray-700 font-medium mb-2">Discount (%)</label>
                    <input type="number" name="discount" value="0" 
                        class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 transition">
                </div>
                <div class="w-full">
                    <label class="block text-gray-700 font-medium mb-2">Background Color</label>
                    <input type="color" name="bgColor" value="#333333" 
                        class="w-full h-10 rounded-md border border-gray-300">
                </div>
            </div>
    
            <!-- Submit Button -->
            <div class="text-center">
                <button type="submit" 
                    class="w-full md:w-1/3 bg-gradient-to-r from-blue-500 to-indigo-600 text-white py-3 rounded-md font-semibold hover:shadow-lg hover:from-blue-600 hover:to-indigo-700 transition duration-150 ease-in-out">
                    <i class="ri-check-line"></i> Create Product
                </button>
            </div>
        </form>
    </div>
</div>

<%- include('./partials/footer') %>
