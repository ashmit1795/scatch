<%- include('./partials/header') %>

<div class="w-full min-h-screen flex flex-col items-center justify-center px-20 py-10">
    <h2 class="text-3xl font-semibold mb-5">Create New Product</h2>
    <form action="/app/product/create" method="post" enctype="multipart/form-data" class="w-1/2 bg-white shadow-md rounded-lg p-8">
        <div class="mb-4">
            <label class="block text-gray-700 mb-2">Product Name</label>
            <input type="text" name="name" placeholder="Enter product name" required class="w-full px-4 py-2 border border-gray-300 rounded-md">
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 mb-2">Description</label>
            <textarea name="description" placeholder="Enter product description" required class="w-full px-4 py-2 border border-gray-300 rounded-md"></textarea>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 mb-2">Price (â‚¹)</label>
            <input type="number" name="price" placeholder="Enter price" required class="w-full px-4 py-2 border border-gray-300 rounded-md">
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 mb-2">Category</label>
            <input type="text" name="category" placeholder="Enter category" class="w-full px-4 py-2 border border-gray-300 rounded-md">
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 mb-2">Image</label>
            <input type="file" name="image" accept="image/*" required class="w-full px-4 py-2 border border-gray-300 rounded-md">
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 mb-2">Stock</label>
            <input type="number" name="stock" placeholder="Enter stock quantity" required class="w-full px-4 py-2 border border-gray-300 rounded-md">
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 mb-2">Discount (%)</label>
            <input type="number" name="discount" value="0" class="w-full px-4 py-2 border border-gray-300 rounded-md">
        </div>
        <div class="flex gap-4 mb-6">
            <div class="w-1/3">
                <label class="block text-gray-700 mb-2">Background Color</label>
                <input type="color" name="bgColor" value="#333" class="w-full h-10 rounded-md">
            </div>
        </div>
        <button type="submit" class="w-full bg-blue-500 text-white py-3 rounded-lg font-semibold">Create Product</button>
    </form>
</div>

<%- include('./partials/footer') %>
