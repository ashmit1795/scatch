<%- include('./partials/header') %>

<div class="flex flex-col items-center justify-center w-full h-screen bg-gray-100">
    <!-- Error Code Display -->
    <div class="text-center">
        <h1 class="text-6xl font-bold text-red-500">
            <%= status || 'Error' %>
        </h1>
        <p class="text-2xl mt-2 text-gray-700">
            <%= message || 'Something went wrong' %>
        </p>
    </div>

    <!-- Error Description and Suggestions -->
    <div class="mt-4 text-center">
        <% if (status && status.startsWith('4')) { %>
            <p class="text-lg text-gray-600">
                Oops! It looks like the page you're looking for doesnâ€™t exist or you don't have permission to view it.
            </p>
        <% } else if (status && status.startsWith('5')) { %>
            <p class="text-lg text-gray-600">
                Sorry! Something went wrong on our end. We're working on fixing this issue.
            </p>
        <% } %>
    </div>

    <!-- Navigation Options -->
    <div class="mt-6 flex gap-4">
        <a href="/" class="px-6 py-2 rounded-md bg-blue-500 text-white hover:bg-blue-600">
            Go Home
        </a>
        <button onclick="history.back()" class="px-6 py-2 rounded-md bg-gray-300 text-gray-800 hover:bg-gray-400">
            Go Back
        </button>
    </div>
</div>

<%- include('./partials/footer') %>
